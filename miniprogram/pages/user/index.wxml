<view>
  <view class="page">
    <view class="head">
      <image class="img"></image>
      <view class="list">
        <view class="type">
          <van-tag type="success" round>VIP会员</van-tag>
        </view>
        <view class="info">有效期至 2023年6月1日</view>
        <view class="info">剩余时长: 99min</view>
      </view>
    </view>
    <van-cell-group class="menu">
      <van-cell icon="records" title="分离记录" bindtap="goToRecords"/>
      <van-cell icon="orders-o" title="我的订单"/>
      <van-cell icon="contact" title="联系客服"/>
      <van-cell icon="share-o" title="分享给好友" bind:click="onClick"/>
    </van-cell-group>
    <van-share-sheet
      show="{{ showShare }}"
      title="立即分享给好友"
      options="{{ options }}"
      bind:select="onSelect"
      bind:close="onClose"
    />
  </view>
  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item name="index" icon="wap-home-o">首页</van-tabbar-item>
    <van-tabbar-item name="records" icon="records">记录</van-tabbar-item>
    <van-tabbar-item name="vip" icon="music-o">会员</van-tabbar-item>
    <van-tabbar-item name="user" icon="user-o">我的</van-tabbar-item>
  </van-tabbar>
</view>
